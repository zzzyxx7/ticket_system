<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ticket.mapper.TicketOrderMapper">

    <resultMap id="TicketOrderResultMap" type="com.ticket.entity.TicketOrder">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="eventId" column="event_id"/>
        <result property="quantity" column="quantity"/>
        <result property="totalPrice" column="total_price"/>
        <result property="status" column="status"/>
        <result property="createdTime" column="created_time"/>
    </resultMap>

    <!-- 基础CRUD SQL -->
    <select id="selectById" parameterType="Long" resultMap="TicketOrderResultMap">
        SELECT * FROM ticket_order WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="TicketOrderResultMap">
        SELECT * FROM ticket_order
    </select>

    <insert id="insert" parameterType="com.ticket.entity.TicketOrder"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ticket_order (user_id, event_id, quantity, total_price, status,updated_by, updated_time)
        VALUES (#{userId}, #{eventId}, #{quantity}, #{totalPrice}, #{status},NOW(), #{updatedBy}, NOW())
    </insert>

    <update id="update" parameterType="com.ticket.entity.TicketOrder">
        UPDATE ticket_order
        SET user_id = #{userId}, event_id = #{eventId}, quantity = #{quantity},
            total_price = #{totalPrice}, status = #{status}
            updated_by = #{updatedBy}, updated_time = NOW()  <!-- 每次更新刷新 -->
        WHERE id = #{id}
    </update>

    <!-- 业务查询 SQL -->
    <select id="selectByUserId" parameterType="Long" resultMap="TicketOrderResultMap">
        SELECT * FROM ticket_order WHERE user_id = #{userId}
    </select>

    <update id="updateStatus">
        UPDATE ticket_order SET status = #{status},updated_by = #{updatedBy},  <!-- 新增：传入操作人ID -->
        updated_time = NOW() WHERE id = #{id}
    </update>
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM ticket_order WHERE id = #{id}
    </delete>

    <!-- 分页查询 SQL -->
    <select id="selectByPage" resultMap="TicketOrderResultMap">
        SELECT * FROM ticket_order LIMIT #{offset}, #{size}<!-- #{offset}表示查询的起始位置（偏移量）
#{size}表示每页显示的记录数量 -->
    </select>

    <select id="selectByUserIdAndPage" resultMap="TicketOrderResultMap">
        SELECT * FROM ticket_order
        WHERE user_id = #{userId}
            LIMIT #{offset}, #{size}
    </select>

</mapper>