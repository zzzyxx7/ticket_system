<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ticket.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.ticket.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="role" column="role"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="selectById" parameterType="Long" resultMap="UserResultMap">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="selectByUsername" parameterType="String" resultMap="UserResultMap">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="selectByUsernameOrEmail" resultMap="UserResultMap">
        SELECT * FROM user
        WHERE username = #{username} OR email = #{email}
        LIMIT 1
    </select>

    <!-- 新增：查询管理员用户 -->
    <select id="selectAdmins" resultMap="UserResultMap">
        SELECT * FROM user WHERE role = 'ADMIN'
    </select>

    <select id="selectAll" resultMap="UserResultMap">
        SELECT * FROM user
    </select>


    <insert id="insert" parameterType="com.ticket.entity.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username, password, email, phone,role,status)
        VALUES (#{username}, #{password}, #{email}, #{phone},#{role},#{status})
    </insert>

    <update id="update" parameterType="com.ticket.entity.User">
        UPDATE user
        SET username = #{username}, password = #{password},
            email = #{email}, phone = #{phone},
            role = #{role},status = #{status},updated_time = NOW()
        WHERE id = #{id}
    </update>


    <delete id="deleteById" parameterType="Long">
        DELETE FROM user WHERE id = #{id}
    </delete>


    <!-- 管理端分页查询 -->
    <select id="selectByPage" resultMap="UserResultMap">
        SELECT * FROM user
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        LIMIT #{offset}, #{size}
    </select>

    <select id="countByPage" resultType="java.lang.Long">
        SELECT COUNT(*) FROM user
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>

    <!-- 启用/禁用 -->
    <update id="updateStatus">
        UPDATE user
        SET status = #{status}, updated_time = NOW()
        WHERE id = #{id}
    </update>
</mapper>